<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_layout"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.minichallengechapter6aplikasihitungbmi.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_threadFragment"
            app:destination="@id/threadFragment" />
        <action
            android:id="@+id/action_mainFragment_to_handlerThreadFragment"
            app:destination="@id/handlerThreadFragment" />
    </fragment>
    <fragment
        android:id="@+id/threadFragment"
        android:name="com.example.minichallengechapter6aplikasihitungbmi.fragment.ThreadFragment"
        android:label="fragment_thread"
        tools:layout="@layout/fragment_thread" />
    <fragment
        android:id="@+id/handlerThreadFragment"
        android:name="com.example.minichallengechapter6aplikasihitungbmi.fragment.HandlerThreadFragment"
        android:label="fragment_handler_thread"
        tools:layout="@layout/fragment_handler_thread" />
</navigation>